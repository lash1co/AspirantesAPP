@model AspirantesApp.Models.ViewModels.RegistroViewModel

@using (Html.BeginForm("Registrar", "Acceso", FormMethod.Post, new { @class = "form-horizontal-login-register", role = "form" }))
{
    @Html.AntiForgeryToken()

    if (ViewData.ModelState[""] != null)
    {
        <div class="alert alert-danger">
            @ViewData.ModelState[""].Errors[0].ErrorMessage
        </div>
    }

    <div class="form-group row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Correo, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.ConfirmarPassword, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.PasswordFor(m => m.ConfirmarPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmarPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Registrar</button>
            @Html.ActionLink("¿Ya tienes una cuenta? Inicia sesión aquí", "Login", "Acceso", null, new { @class = "btn btn-link" })
        </div>
    </div>
}


